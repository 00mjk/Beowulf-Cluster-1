<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<p>Go to <%= link_to "Machines", machines_path %></p>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Status</th>
      <th>Machine</th>
      <th>Input</th>
      <th>Output</th>
      <th>Updated At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.status %></td>
        <td><%= task.machine %></td>
        <td><%= task.input %></td>
        <td><%= task.output %></td>
        <td><%= task.updated_at.utc.in_time_zone('Mexico City').strftime('%d-%b-%Y %H:%M:%S') %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

